@{
  ViewData["Title"] = "Chương trình giáo lý Thăng Tiến";
  ViewData["RenderBody"] = false;
}
@model List<Book>

<!-- Breadcrumb -->
<div class="container">
	<div class="bg0 flex-wr-sb-c p-rl-20 p-tb-8">
		<div class="f2-s-1 p-r-30 m-tb-6">
			<a href="~/Home" class="breadcrumb-item f1-s-3 cl9">
				Home
			</a>

			<span class="breadcrumb-item f1-s-3 cl9">
				Tài liệu giáo lý
			</span>
		</div>

		<div class="pos-relative size-a-2 bo-1-rad-22 of-hidden bocl11 m-tb-6">
			<input class="f1-s-1 cl6 plh9 s-full p-l-25 p-r-45" type="text" name="search" placeholder="Search">
			<button class="flex-c-c size-a-1 ab-t-r fs-20 cl2 hov-cl10 trans-03">
				<i class="zmdi zmdi-search"></i>
			</button>
		</div>
	</div>
</div>

<!-- Page heading -->
<div class="container p-t-4 p-b-40">
	<h2 class="f1-l-1 cl2">
		Chương trình giáo lý thăng tiến
	</h2>
</div>

<!-- Post -->
<section class="bg0 p-b-55">
	<div class="container">
		<div class="row justify-content-left">
			<div class="col-md-10 col-lg-12 p-b-80">
				<div class="p-r-10 p-r-0-sr991">
					<div class="m-t--40 p-b-40">
						@foreach (var book in Model )
						{

							var filePath = $"Data\\" + book.BookId + ".json";
							<!-- Item post -->
							<div class="flex-wr-sb-s p-t-40 p-b-15 how-bor2">
								<a asp-controller="Books" asp-action="Detail" asp-route-filePath="@filePath" asp-route-bookId="@book.BookId" class="size-w-8 wrap-pic-w hov1 trans-03 w-full-sr575 m-b-25">
									<img src="~/images/@book.ImageUrl" alt="IMG">
								</a>

								<div class="size-w-9 w-full-sr575 m-b-25" style="text-align:justify">
									<h5 class="p-b-12">
										<a asp-controller="Books" asp-action="Detail" asp-route-filePath="@filePath" asp-route-bookId="@book.BookId" class="f1-l-1 cl2 hov-cl10 trans-03 respon2">
										  @book.BookTitle
										</a>
									</h5>
										@foreach (var desc in book.Description)
                    {
												<p class="f1-s-1 cl6 p-b-24">
													@desc
												</p>
                    }

									<a asp-controller="Books" asp-action="Detail" asp-route-bookId="@book.BookId" asp-route-filePath="@filePath" class="f1-s-1 cl9 hov-cl10 trans-03">
										CHI TIẾT
										<i class="m-l-2 fa fa-long-arrow-alt-right"></i>
									</a>
								</div>
							</div>
						}

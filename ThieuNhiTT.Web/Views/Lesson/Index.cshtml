@model Lesson
	


<!-- Breadcrumb -->
<div class="container">
	<div class="bg0 flex-wr-sb-c p-rl-20 p-tb-8">
		<div class="f2-s-1 p-r-30 m-tb-6">
			<a href="~/Home" class="breadcrumb-item f1-s-3 cl9">
				Home
			</a>

			<span class="breadcrumb-item f1-s-3 cl9">
				Tài liệu giáo lý
			</span>
		</div>

		<div class="pos-relative size-a-2 bo-1-rad-22 of-hidden bocl11 m-tb-6">
			<input class="f1-s-1 cl6 plh9 s-full p-l-25 p-r-45" type="text" name="search" placeholder="Search">
			<button class="flex-c-c size-a-1 ab-t-r fs-20 cl2 hov-cl10 trans-03">
				<i class="zmdi zmdi-search"></i>
			</button>
		</div>
	</div>
</div>


<!-- Content -->
<section class="bg0 p-b-140 p-t-10">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-12 col-lg-12 p-b-30">
				<div class="p-r-10 p-r-0-sr991">
					<!-- Blog Detail -->
					<div class="p-b-70 how-bor2">
						<a href="#" class="f1-s-10 cl2 hov-cl10 trans-03 text-uppercase">
	
						</a>

						@* <h3 class="f1-l-3 cl2 p-b-16 p-t-33 respon2" style="text-align:center">
							Bài @Model.LessonId. @Model.LessonTitle
						</h3> *@
		
								<div class="wrap-pic-max-w p-b-30" style="text-align:center">
									<img src="~/@Model.ImageUrl" alt="IMG">
								</div>
						<div class="p-t-16">
							<h5 class="p-b-5" style="font-weight:bold">
									A. Ý CHÍNH
							</h5>
						</div>
						@foreach (var content in Model.MainContent)
						{
							{
								<p class="f1-s-11 cl6 p-b-25">
								 @content
								</p>
							}
						}
						<div class="p-t-16">
							<h5 class="p-b-5" style="font-weight:bold">
									B. HỆ THỐNG CÂU HỎI
							</h5>
						</div>
						@foreach (var QandA in Model.Questions)
						{
							{
								<p class="f1-s-11 cl6 p-b-25">
									@QandA.Ask
								</p>
								<p class="f1-s-11 cl6 p-b-25">
									@QandA.Answer
								</p>
							}
						}

						<div class="p-t-16">
							<h5 class="p-b-5" style="font-weight:bold">
									C. NỘI DUNG CẦN NHỚ
							</h5>
						</div>
						@foreach (var content in Model.MemoContent)
						{
							{
								<p class="f1-s-11 cl6 p-b-25">
									@content
								</p>
							}
						}

						<div class="p-t-16">
							<h5 class="p-b-5" style="font-weight:bold">
									D. THỰC HÀNH
							</h5>
						</div>
						@foreach (var action in Model.Actions)
						{
							{
								<p class="f1-s-11 cl6 p-b-25">
									@action
								</p>
							}
						}
								<!-- Tag -->
								<div class="flex-s-s p-t-12 p-b-15">
									<span class="f1-s-12 cl5 m-r-8">
										<a asp-controller="Lesson" asp-action="Index" class="f1-m-3 cl2 hov-cl10 trans-03">
										</a>
									</span>
								</div>
					</div>
					@{
						var filePath = "Data\\" + Model.BookId + ".json";
						var nextLesson = Convert.ToInt16(Model.LessonId) + 1;
						var previousLesson = Convert.ToInt16(Model.LessonId) - 1;
						if(previousLesson == 0)
            {
              previousLesson = 1;
            }
					}

					@{
						if (previousLesson < Convert.ToInt16(Model.LessonId))
            {
							
							<a asp-controller="Lesson" asp-action="Index" asp-route-bookId="@Model.BookId" asp-route-filePath="@filePath" asp-route-lessonId="@previousLesson" class="f1-s-1 cl9 hov-cl10 trans-03" style="float:left">
								<i class="m-l-2 fa fa-long-arrow-alt-left"></i>	BÀI @previousLesson
							</a>
            }
					}

					<a asp-controller="Lesson" asp-action="Index" asp-route-bookId="@Model.BookId" asp-route-filePath="@filePath" asp-route-lessonId="@nextLesson" class="f1-s-1 cl9 hov-cl10 trans-03" style="float:right">
						BÀI @nextLesson
						<i class="m-l-2 fa fa-long-arrow-alt-right"></i>
					</a>

				</div>
			</div>
		</div>
	</div>
</section>